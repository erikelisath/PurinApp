<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:weightSum="1">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/textSuche"
            android:id="@+id/search_textSuche"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@drawable/highlight_outlines"
            android:layout_margin="1dp">
        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchView"
                android:iconifiedByDefault="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="17dp"/>
            <!--TODO: schÃ¶ner machen -->
        </FrameLayout>
    </FrameLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/textFilter"
            android:id="@+id/search_textFilter"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/textFleisch"
                android:drawableTop="@drawable/ic_fleisch_k"
                android:id="@+id/search_buttonFleisch"
                android:layout_weight="1.0"
                style="?android:attr/borderlessButtonStyle" android:background="@drawable/button_theme"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/textFisch"
                android:drawableTop="@drawable/ic_fisch_k"
                android:id="@+id/search_buttonFisch"
                android:layout_weight="1.0"
                style="?android:attr/borderlessButtonStyle" android:background="@drawable/button_theme"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/textGemuese"
                android:drawableTop="@drawable/ic_gemuse_k"
                android:id="@+id/search_buttonGemuese"
                android:layout_weight="1.0"
                style="?android:attr/borderlessButtonStyle" android:background="@drawable/button_theme"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/linearLayout"
            android:layout_marginTop="10dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/textObst"
                android:drawableTop="@drawable/ic_obst_k"
                android:id="@+id/search_buttonObst"
                android:layout_weight="1.0"
                style="?android:attr/borderlessButtonStyle" android:background="@drawable/button_theme"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/textMilch"
                android:drawableTop="@drawable/ic_milch_k"
                android:id="@+id/search_buttonMilch"
                android:layout_weight="1.0"
                style="?android:attr/borderlessButtonStyle" android:background="@drawable/button_theme"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/textGetreide"
                android:drawableTop="@drawable/ic_getreide_k"
                android:id="@+id/search_buttonGetreide"
                android:layout_weight="1.0"
                style="?android:attr/borderlessButtonStyle" android:background="@drawable/button_theme"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="10dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/textPurinXL"
                android:id="@+id/search_buttonPurinL"
                android:layout_weight="1.0"
                android:textColor="#ff1919"
                style="?android:attr/borderlessButtonStyle" android:background="@drawable/button_theme"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/textPurinM"
                android:id="@+id/search_buttonPurinM"
                android:layout_weight="1.0"
                android:textColor="#ffff4c"
                style="?android:attr/borderlessButtonStyle" android:background="@drawable/button_theme"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/textPurinS"
                android:id="@+id/search_buttonPurinS"
                android:layout_weight="1.0"
                android:textColor="#198c19"
                style="?android:attr/borderlessButtonStyle" android:background="@drawable/button_theme"/>
    </LinearLayout>
</LinearLayout>

