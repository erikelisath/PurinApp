<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application Theme -->
    <style name="CustomDarkTheme"
           parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyTabs</item>
        <item name="android:actionBarDivider">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/theme_highlight</item>
        <item name="android:backgroundStacked">@color/theme_background</item>
    </style>

    <style name="MyTabs"
           parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_bar_background</item>
    </style>

    <!-- Dialog styles -->
    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
    </style>




    <!-- Main styles -->
    <style name="MainBackground"
           parent="CustomDarkTheme">
        <item name="android:background">@color/theme_background</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="HighlightBackground"
           parent="CustomDarkTheme">
        <item name="android:background">@color/theme_background_highlight</item>
        <item name="android:textColor">@color/text_light</item>
    </style>
</resources>