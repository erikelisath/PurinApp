<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.xek6ae.PurinApp"
          android:versionCode="1"
          android:versionName="2.4.17">
    <uses-sdk android:minSdkVersion="17"/>
    <application android:label="@string/app_name" android:icon="@drawable/purin_logo"
                 android:theme="@style/CustomDarkTheme">
        <activity android:name=".ActionBarActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".UberActivity"
                  android:parentActivityName=".ActionBarActivity"/>
        <activity android:name=".SearchActivity"
                  android:parentActivityName=".ActionBarActivity"/>
    </application>
</manifest>
